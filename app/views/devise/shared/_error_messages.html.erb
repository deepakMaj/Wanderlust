<% if resource.errors.any? %>
<div class="flex justify-center">
  <div id="flash-messages-section", class="bg-red-100 opacity-75 border border-red-400 text-red-700 px-4 py-3 w-1/2 rounded relative" role="alert">
    <ul>
      <% resource.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
    </ul>
  </div>
</div>
<% end %>
