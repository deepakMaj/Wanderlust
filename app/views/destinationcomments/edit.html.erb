<div class="flex justify-center">
  <div class="container w-full max-w-2xl bg-blue-100 shadow-xl rounded px-8 pt-6 pb-4 mb-16 mt-32">
    <%= form_for([@destination, @destinationcomment]) do |f| %>
      <div class="mb-8">
        <%= f.label "Edit comment: ", class: "block text-gray-700 text-base font-sans font-bold mb-2" %>
        <%= f.text_area :body, placeholder: "...", class: "shadow h-32 font-sans text-base text-black font-semibold appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
      </div>
      <div class="mb-8 flex justify-center">
        <%= f.submit "Edit", class: "bg-blue-500 hover:bg-blue-700 text-white font-sans text-base font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline"%>
      </div>
  <% end %>
  </div>
</div>
