<div class="flex justify-left">
  <div class="container w-full max-w-3xl bg-blue-200 shadow-xl rounded px-8 pt-2 pb-5 mb-4">
    <p class="text-base font-sans font-bold underline text-gray-700 mt-2 "><%= User.email_name(current_user.email)%>:</p>
    <p class="text-base font-sans font-semibold text-black mt-2 mb-4"><%= comment.body %></p>
    <div class="flex justify-right">
      <%= link_to "delete", [comment.adventure, comment], method: :delete,
                  data: {confirm: "Are you sure you want to delete?"},
                  class: "bg-red-500 hover:bg-red-700 text-white font-sans font-semibold text-sm h-6 w-auto px-2 py-1 rounded mr-2 focus:outline-none focus:shadow-outline" %>
      <%= link_to "edit", edit_adventure_comment_path(comment.adventure, comment),
                    class: "bg-green-500 hover:bg-green-700 text-white font-sans font-semibold text-sm h-6 w-auto px-2 py-1 rounded focus:outline-none focus:shadow-outline"%>
      <p class="font-sans text-sm font-semibold text-gray-700 ml-4">
        About <%= time_ago_in_words(comment.created_at)%> ago...
      </p>
    </div>
  </div>
</div>
