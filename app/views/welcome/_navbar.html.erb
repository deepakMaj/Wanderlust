<div class="bg-gray-700 lg:shadow-xs lg:bg-transparent">
  <nav class="flex items-center justify-between flex-wrap p-5">
    <div class="flex items-center flex-shrink-0 text-white mr-6">
      <%= image_tag("suitcase-rolling-solid.svg", class: "inline-block mr-2 h-8 w-8")%>
      <span class="lg:inline-block sm:mr-0 sm:mt-0">
        <%= link_to "Wanderlust", root_path, class: "lg:mr-2 hover:opacity-75 font-bold text-white hover:text-black font-sans text-3xl"%>
      </span>
    </div>
    <div class="block lg:hidden">
      <button class="flex items-center px-3 py-2 border rounded text-teal-200 border-teal-400 hover:text-white hover:border-white" id="navbtn">
        <svg class="fill-current h-3 w-3" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><title>Menu</title><path d="M0 3h20v2H0V3zm0 6h20v2H0V9zm0 6h20v2H0v-2z"/></svg>
      </button>
    </div>
    <div class="hidden w-full block flex-grow lg:flex lg:items-center lg:w-auto" id="drop">
      <div class="lg:flex-grow">
        <%= link_to "Adventure", adventures_path, class: "lg:mr-4 block mt-4 lg:mt-0 text-white lg:inline-block font-sans font-semibold text-xl hover:bg-transparent hover:text-black hover:opacity-75" %>
        <%= link_to "Destinations", destinations_path, class: "lg:mr-4 block mt-4 lg:mt-0 lg:inline-block text-white font-sans font-semibold text-xl hover:bg-transparent hover:text-black hover:opacity-75" %>
        <%= link_to "Parks", parks_path, class: "lg:mr-4 block mt-4 lg:mt-0 lg:inline-block text-white font-sans font-semibold text-xl hover:bg-transparent hover:text-black hover:opacity-75" %>
        <%= link_to "About", about_path, class: "lg:mr-4 block mt-4 lg:mt-0 lg:inline-block text-white font-sans font-semibold text-xl hover:bg-transparent hover:text-black hover:opacity-75" %>
      </div>
      <div>
      <% if user_signed_in? %>
          <p class="mt-4 lg:mt-0 inline-block text-base font-semibold font-sans font-semibold text-xl text-white">Welcome <i class="fa fa-user lg:ml-4 ml-2"></i> <%= link_to User.email_name(current_user.email), edit_user_registration_path, class: "font-sans font-semibold text-sm mr-4 hover:text-black hover:opacity-75"%></p>
        <%= link_to "Logout", destroy_user_session_path, method: :delete, class: "inline-block mt-4 lg:mt-0 text-sm bg-red-500 hover:bg-red-700 text-white font-semibold hover:text-white py-2 px-4 rounded"%>
      <% else %>
        <%= link_to "Login", new_user_session_path, class: "inline-block mt-4 lg:mt-0 mr-2 border-none justify-right text-base bg-blue-500 hover:bg-blue-700 font-sans font-semibold text-white py-2 px-4 lg:py-3 lg:px-6 rounded" %>
        <%= link_to "Sign Up", new_user_registration_path, class: "inline-block mt-4 lg:mt-0 lg:mr-2 justify-right hover:bg-green-700 text-base text-white font-sans font-semibold hover:text-white py-2 px-4 lg:py-3 lg:px-6 border-none bg-green-500 rounded" %>
      <% end %>
      </div>
    </div>
  </nav>
</div>
<script type="text/javascript">
  var navbtn = document.getElementById('navbtn');
  var drop = document.getElementById('drop');
  navbtn.addEventListener('click', function(){
    if(drop.classList.contains('hidden')){
      drop.classList.remove('hidden');
    }
    else{
      drop.classList.add('hidden');
    }
  });
</script>
