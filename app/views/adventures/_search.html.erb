<div class="grid mb-8 mt-12">
  <%= form_tag(search_page_path, :method => "get", autocomplete: "off") do %>
    <div class="flex justify-center">
      <%= search_field_tag :search, params[:search], placeholder: "Search by state or name of event", class: "font-sans font-semibold text-base text-gray-600 p-4 w-1/3 text-sm mr-3 mb-6 bg-white rounded-full focus:outline-none" %>
      <%= button_tag "Search", class: "text-center bg-blue-500 hover:bg-blue-700 h-8 pt-2 mt-2 text-base text-white p-3 font-sans font-semibold text-base rounded-full focus:outline-none focus:shadow-outline" %>
    </div>
  <% end %>
</div>
