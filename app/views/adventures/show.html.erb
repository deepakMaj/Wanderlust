<div class="flex justify-center mt-12 mb-16">
  <div class="container w-full max-w-4xl bg-gray-100 shadow-xl rounded px-8 pt-6 pb-8 mb-4">
    <h2 class="text-4xl font-serif font-semibold text-center mb-8 underline text-gray-700"><%= @adventure.name %></h2>
      <%= image_tag(@adventure.url, class: "w-full pt-4 pl-16 pr-16 pb-8") %>
      <p class="text-xl tracking-wider leading-7 font-serif text-black pr-16 pl-16"><%= @adventure.description %></p>
  </div>
</div>
<div class="flex justify-center">
  <div class="container w-full max-w-4xl bg-gray-100 shadow-xl rounded px-8 pt-6 pb-8 mb-4">
    <h2 class="text-xl text-black font-sans font-bold mb-8"><%= @adventure.comments.count %> Comments</h2>
    <%= render @adventure.comments %>
  </div>
</div>
<div class="flex justify-center">
  <%= render 'comments/form' %>
</div>
