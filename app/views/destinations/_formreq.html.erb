<% @destinations.each do |destination| %>
  <div class="max-w-xs rounded bg-white overflow-hidden shadow-lg mb-8">
    <%= image_tag(destination.url, class: "w-full h-64")%>
    <div class="px-6 py-4">
      <div class="font-bold text-xl leading-6 mb-4"><%= destination.name %></div>
      <p class="text-black text-base mb-4">
        <%= truncate(destination.description, length: 100) %>
      </p>
      <p class="text-center"><%= link_to "explore", destination_path(destination.id), class: "text-orange-600 text-center mb-4 underline text-sm text-serif" %></p>
    </div>
  </div>
<% end %>
