<div class="flex justify-center mt-12 mb-16">
  <div class="container w-full max-w-4xl bg-gray-100 shadow-xl rounded px-8 pt-6 pb-8 mb-4">
    <h2 class="text-4xl font-serif font-semibold text-center mb-8 underline text-gray-700"><%= @destination.name %></h2>
      <%= image_tag(@destination.url, class: "w-full pt-4 pl-16 pr-16 pb-8") %>
      <p class="text-xl tracking-wider leading-7 font-serif text-black pr-16 pl-16"><%= @destination.description %></p>
  </div>
</div>
<div class="flex justify-center">
  <div class="container w-full max-w-4xl bg-gray-100 shadow-xl rounded px-8 pt-6 pb-8 mb-4">
    <h2 class="text-xl text-black font-sans font-bold mb-8"><%= @destination.destinationcomments.count %> Comments</h2>
    <%= render @destination.destinationcomments %>
  </div>
</div>
<div class="flex justify-center">
  <%= render 'destinationcomments/form' %>
</div>
